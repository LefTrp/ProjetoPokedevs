<script>
const textoCentral = document.getElementById("textoCentral");
const botao = document.getElementById("coracao");
const baloes = [
  document.getElementById("balao1"),
  document.getElementById("balao2"),
  document.getElementById("balao3"),
  document.getElementById("balao4"),
  document.getElementById("balao5")
];

let indiceBalao = 0;
let timeoutFundoRosa;

function mostrarBalaoAtual() {
  const balao = baloes[indiceBalao];
  if (!balao) return;

  balao.style.opacity = "1";
  balao.style.bottom = "40vh";

  // radial do bal√£o
  setTimeout(() => {
    const rect = balao.getBoundingClientRect();
    const cx = rect.left + rect.width / 2;
    const cy = rect.top + rect.height / 2;

    [0,1,2].forEach(i => {
      const c = document.createElement("div");
      c.style.position = "fixed";
      c.style.width = `${200 + i*60}px`;
      c.style.height = `${200 + i*60}px`;
      c.style.top = `${cy}px`;
      c.style.left = `${cx}px`;
      c.style.borderRadius = "50%";
      c.style.pointerEvents = "none";
      c.style.zIndex = "24";
      c.style.transform = "translate(-50%, -50%) scale(0)";
      c.style.animation = "crescer 2s ease-in-out forwards";
      c.style.background =
        i === 0
          ? "radial-gradient(circle, #e0a9a9, #F4C2C2, #ffe4e4)"
          : i === 1
          ? "radial-gradient(circle, #F4C2C2, #ffe4e4, #e0a9a9)"
          : "radial-gradient(circle, #ffe4e4, #e0a9a9, #F4C2C2)";
      document.body.appendChild(c);
      setTimeout(() => c.remove(), 2000);
    });
  }, 5000);

  balao.addEventListener("click", () => {
    balao.style.bottom = "120vh";
    balao.style.opacity = "0";
    indiceBalao++;

    if (indiceBalao < baloes.length) {
      setTimeout(mostrarBalaoAtual, 800);
    } else {
      // √öltimo bal√£o: cancela fundo rosa e mostra fade final
      clearTimeout(timeoutFundoRosa);
      document.body.style.backgroundColor = "#000000";

      // Espera 200ms para garantir renderiza√ß√£o do fundo preto
      setTimeout(() => {
        const fade = document.getElementById("fadeFinal");
        fade.classList.add("ativo");
      }, 200);
    }
  }, { once: true });
}

botao.addEventListener("click", () => {
  botao.classList.add("animar");

  const rect = botao.getBoundingClientRect();
  const centerX = rect.left + rect.width / 2;
  const centerY = rect.top + rect.height / 2;

  document.body.style.setProperty('--after-top', `${centerY}px`);
  document.body.style.setProperty('--after-left', `${centerX}px`);

  setTimeout(() => document.body.classList.add("wave"), 200);

  setTimeout(() => textoCentral.style.opacity = "1", 1000);
  setTimeout(() => textoCentral.style.opacity = "0", 3500);
  setTimeout(() => textoSimples.style.opacity = "1", 3600);
  setTimeout(() => textoSimples.style.opacity = "0", 6600);
  setTimeout(() => textoToque.style.opacity = "1", 6700);
  setTimeout(() => textoToque.style.opacity = "0", 8800);

  timeoutFundoRosa = setTimeout(() => document.body.style.backgroundColor = "#ffe4e4", 18200);

  setTimeout(mostrarBalaoAtual, 13000);
});

botao.addEventListener("animationend", () => {
  botao.style.display="none";
});

const texto1 = document.getElementById("texto1");
const texto2 = document.getElementById("texto2");
const container = document.querySelector(".container");

setTimeout(() => texto1.style.opacity = "1", 2500);
setTimeout(() => texto1.style.opacity = "0", 5000);
setTimeout(() => {
  document.body.style.backgroundColor = "#000000";
  texto2.style.color = "#ffffff";
}, 7000);
setTimeout(() => texto2.style.opacity = "1", 8000);
setTimeout(() => texto2.style.opacity = "0", 13000);
setTimeout(() => {
  container.style.opacity = "1";
  document.querySelectorAll(".circulo").forEach(c => {
    c.style.animation = "crescer 2s ease-in-out forwards";
  });
}, 15000);
</script>

<div id="fadeFinal" class="fade-final"></div>

